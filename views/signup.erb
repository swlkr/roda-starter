<h1 class="text-center">signup</h1>

<div class="center">
  <div class="card">
    <% form action: signup_path, method: 'post' do |f| %>
      <div>
        <label for="email">Enter your email</label>
        <%== f.input :email, name: 'email', autofocus: true, placeholder: 'email@example.com' %>
      </div>
      <%== f.button value: 'sign up' %>
    <% end %>
  </div>
</div>

<a class="text-center" href="<%= login_path %>">Already have an account? Login here</a>
