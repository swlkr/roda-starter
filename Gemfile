source 'https://rubygems.org'

# web framework
gem 'roda'

# web server
gem 'puma'

# database ORM
gem 'sequel'

# html as ruby
gem 'markaby'

# connects markaby to roda
gem 'tilt'

# don't expose integer ids in urls
# use hashes instead
gem 'sequel-hash_id'

# database (use it in production and be amazed)
# also check out litestream for backups
gem 'sqlite3'

# console (try 'docker run web pry')
gem 'pry'

# emails
gem 'mail'

# background jobs
gem 'sucker_punch'

group :development do
  # reload web server on file change
  gem 'rerun'
end
